{
  "ignore_patterns": [
    ".git/*",
    "*.log",
    "*.tmp",
    "node_modules/*",
    "__pycache__/*",
    "*.pyc",
    ".pytest_cache/*",
    "venv/*",
    "env/*",
    ".env",
    "dist/*",
    "build/*",
    "target/*",
    ".DS_Store",
    "*.swp",
    "*.bak",
    "coverage/*",
    ".coverage",
    ".tox/*",
    "*.min.js",
    "*.min.css"
  ],
  "scan_extensions": [
    ".py",
    ".js",
    ".ts",
    ".jsx",
    ".tsx",
    ".java",
    ".c",
    ".cpp",
    ".h",
    ".hpp",
    ".cs",
    ".php",
    ".rb",
    ".go",
    ".rs",
    ".swift",
    ".kt",
    ".scala",
    ".sh",
    ".bash",
    ".ps1",
    ".sql",
    ".html",
    ".css",
    ".scss",
    ".sass",
    ".less",
    ".vue",
    ".yaml",
    ".yml",
    ".json",
    ".xml",
    ".md",
    ".txt",
    ".cfg",
    ".conf",
    ".ini"
  ],
  "reference_patterns": {
    "import": [
      "import\\s+(?:.*\\s+from\\s+)?['\"]([^'\"]+)['\"]",
      "from\\s+['\"]([^'\"]+)['\"]\\s+import",
      "require\\s*\\(\\s*['\"]([^'\"]+)['\"]\\s*\\)",
      "#include\\s*[<\"]([^>\"]+)[>\"]",
      "@import\\s+['\"]([^'\"]+)['\"]",
      "use\\s+['\"]([^'\"]+)['\"]",
      "import\\s+['\"]([^'\"]+)['\"]"
    ],
    "file_path": [
      "['\"]([^'\"]*\\.[a-zA-Z0-9]+)['\"]",
      "src=['\"]([^'\"]+)['\"]",
      "href=['\"]([^'\"]+)['\"]",
      "action=['\"]([^'\"]+)['\"]",
      "data-src=['\"]([^'\"]+)['\"]"
    ]
  },
  "special_files": [
    "README.md",
    "LICENSE",
    "LICENSE.txt",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "requirements.txt",
    "package.json",
    "package-lock.json",
    "yarn.lock",
    "Dockerfile",
    "docker-compose.yml",
    "Makefile",
    ".gitignore",
    ".dockerignore",
    "setup.py",
    "pyproject.toml",
    "Cargo.toml",
    "Cargo.lock",
    "pom.xml",
    "build.gradle",
    "composer.json",
    "composer.lock",
    ".editorconfig",
    ".pre-commit-config.yaml",
    "tox.ini",
    "pytest.ini",
    ".flake8",
    ".pylintrc",
    "mypy.ini",
    "tsconfig.json",
    "jest.config.js",
    ".prettierrc",
    ".eslintrc.js",
    ".eslintrc.json"
  ],
  "min_file_size": 1,
  "max_file_size": 10485760
}